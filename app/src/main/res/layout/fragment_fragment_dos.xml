<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".fragments.FragmentDos">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:alpha="0.7"
        android:background="@drawable/blanco">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_email_eliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="250sp"
                android:layout_x="81dp"
                android:layout_y="480dp"
                android:hint="Introduce email"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_password_eliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="330sp"
                android:layout_x="81dp"
                android:layout_y="480dp"
                android:hint="Introduce contraseÃ±a"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/boton_eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="30dp"
                android:layout_x="215dp"
                android:layout_y="572dp"
                android:text="Eliminar" />

        </FrameLayout>

    </FrameLayout>

</LinearLayout>